
{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // <-- Thay "node" thành "bundler" (chuẩn mới hơn)
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
    // "baseUrl": ".", // << XÓA DÒNG NÀY
    // "paths": {      // << XÓA KHỐI NÀY
    //   "@/*": ["./*"]
    // }
    ,
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ], // Thêm ".next/types/**/*.ts"
  "exclude": [
    "node_modules"
  ]
}
