// tsconfig.json (Đã thêm cấu hình baseUrl và paths)
{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // --- PHẦN ĐƯỢC THÊM/SỬA ---
    "baseUrl": ".", // Đặt thư mục gốc là thư mục hiện tại
    "paths": {
      "@/*": ["./*"] // Ánh xạ '@/' tới thư mục gốc './'
    },
    // --- KẾT THÚC PHẦN THÊM/SỬA ---
    "target": "ES2017" 
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ], 
  "exclude": [
    "node_modules"
  ]
}